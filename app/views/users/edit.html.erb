<h2>User info</h2>
<div>
  <%= form_with model:@user,local:true do |f| %>
    <label>Name</label>
    <%= f.text_field :name %>
    <label>Image</label>
    <%= f.attachment_field :profile_image %>
    <label>Introduction</label>
    <%= f.text_area :introduction %>
    <%= f.submit "Update User" %>
  <% end %>
</div>