

<div>
  <h2>Books</h2>
    <table>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
      <% @books.each do |book| %>
        <tr>
          <td><%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format:'jpeg', class:"img-circle pull-left profile_img" %></td>
          <td><%= link_to "#{book.title}", book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </table>
</div>