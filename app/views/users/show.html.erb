<div>
  <h2>User info</h2>
  <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format:'jpeg', class:"img-circle pull-left profile_img" %>
  <table>
    <tr>
      <th>name</th>
      <th><%= @user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
    </tr>
  </table>
  <% if @user.id == current_user.id %>
    <%= link_to "edit", edit_user_path(current_user.id) %>
  <% end %>
</div>

<div>
  <h2>Books</h2>
    <table>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
      <% @books.each do |book| %>
        <tr>
          <td><%= %></td>
          <td><%= link_to "#{book.title}", book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </table>
</div>