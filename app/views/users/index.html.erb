  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= render "users/sidebar", user: current_user, book: Book.new %>
      </div>

      <div class="col-md-9">
        <h2>Users</h2>
        <div>
          <table class="table table-hover ">
            <thead>
              <tr>
                <th>images</th>
                <th>name</th>
                <th></th>
              </tr>
            </thead>
            <% @users.each do |user| %>
              <tr>
                <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, format:'jpeg', class:"pull-left profile_img" %></td>
                <td><%= user.name %></td>
                <td><%= link_to "show",user_path(user.id) %></td>
              </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>