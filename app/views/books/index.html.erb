<h2>Books</h2>

<div>
  <table>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Option</th>
    </tr>
    <% @books.each do |book| %>
      <tr>
        <td><%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format:'jpeg', class:"img-circle pull-left profile_img" %></td>
        <td><%= link_to "#{book.title}", book_path(book.id) %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </table>
</div>

<h2>New book</h2>
<%= form_with model:@book, local:true do |f| %>
  <label>Title</label>
  <%= f.text_field :title %>
  <label>Opinion</label>
  <%= f.text_area :body %>
  <%= f.submit "Create Book" %>
<% end %>