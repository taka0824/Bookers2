<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <%= render "users/sidebar", user: @book.user, book: Book.new %>
    </div>
    <div class="col-xs-9">
      <h1>Book detail</h1>
      <div>
        <table class="table table-hover">
          <tr>
            <td>
              <%= link_to user_path(@book.user.id) do %>
                <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, format:'jpeg', class:"profile_img" %><br>
                <%= @book.user.name %>
              <% end %>
            </td>

            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <% if @book.user.id == current_user.id %>
              <td><%= link_to "Edit", edit_book_path(@book.id),class: "btn btn-success" %></td>
              <td><%= link_to "Destroy", book_path(@book.id),class: "btn btn-danger",method: :delete, data: {confirm: "削除しますか？"} %></td>
            <% end %>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>